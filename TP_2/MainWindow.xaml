<Window x:Class="TP_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_2"
        xmlns:Services="clr-namespace:Services;assembly=Services"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Options">
                <MenuItem Header="Déconnexion"/>
                <MenuItem Header="Sauvegarder" Click="sauvegarder_Click"/>
                <MenuItem Header="Peuplement initial" Click="peupler_Click"/>
            </MenuItem>
            <MenuItem Header="_Inventaire">
                <MenuItem Header="_Nouveau">
                    <MenuItem Name="annuelle" Header="Annuelle" Click="annuelle_Click"/>
                    <MenuItem Name="vivace"  Header="Vivace" Click="vivace_Click"/>
                    <MenuItem Name="legume" Header="Légume" Click="legume_Click"/>
                    <MenuItem Name="arbre" Header="Arbre ou arbuste" Click="arbre_Click"/>
                </MenuItem>
                <MenuItem Header="_Consulter"/>
                <Separator />
            </MenuItem>
        </Menu>
        <ListBox Name="lbPlantes" ItemsSource="{Binding Path=Plantes}">
            
        </ListBox>
    </DockPanel>
</Window>
